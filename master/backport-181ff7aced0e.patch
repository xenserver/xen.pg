             hvm_update_host_cr3(v);
@@ -2500,6 +2527,11 @@ static void sh_update_paging_modes(struct vcpu *v)
                 old_mfn = pagetable_get_mfn(v->arch.monitor_table);
                 v->arch.monitor_table = pagetable_null();
