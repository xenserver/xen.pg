From d6637a3e37322c31dee4369746750598ea3a3eb4 Mon Sep 17 00:00:00 2001
From: Sergey Dyasli <sergey.dyasli@citrix.com>
Date: Tue, 19 Mar 2019 10:22:06 +0000
Subject: [PATCH 2/8] microcode: rename tool to xen-microcode

This was requested to be done by upstream and is expected to be included
into v7 of Chao's series.

Signed-off-by: Sergey Dyasli <sergey.dyasli@citrix.com>
diff --git a/tools/misc/Makefile b/tools/misc/Makefile
index d522101414..3907f45145 100644
--- a/tools/misc/Makefile
+++ b/tools/misc/Makefile
@@ -23,7 +23,7 @@ INSTALL_SBIN-$(CONFIG_X86)     += xen-hvmcrash
 INSTALL_SBIN-$(CONFIG_X86)     += xen-hvmctx
 INSTALL_SBIN-$(CONFIG_X86)     += xen-lowmemd
 INSTALL_SBIN-$(CONFIG_X86)     += xen-mfndump
-INSTALL_SBIN-$(CONFIG_X86)     += xenmicrocode
+INSTALL_SBIN-$(CONFIG_X86)     += xen-microcode
 INSTALL_SBIN                   += xen-ringwatch
 INSTALL_SBIN                   += xen-tmem-list-parse
 INSTALL_SBIN                   += xencov
@@ -119,7 +119,7 @@ xen-lowmemd: xen-lowmemd.o
 xencov: xencov.o
 	$(CC) $(LDFLAGS) -o $@ $< $(LDLIBS_libxenctrl) $(APPEND_LDFLAGS)
 
-xenmicrocode: xenmicrocode.o
+xen-microcode: xen-microcode.o
 	$(CC) $(LDFLAGS) -o $@ $< $(LDLIBS_libxenctrl) $(APPEND_LDFLAGS)
 
 -include $(DEPS_INCLUDE)
diff --git a/tools/misc/xenmicrocode.c b/tools/misc/xen-microcode.c
similarity index 94%
rename from tools/misc/xenmicrocode.c
rename to tools/misc/xen-microcode.c
index e6c8a3d748..21084111a0 100644
--- a/tools/misc/xenmicrocode.c
+++ b/tools/misc/xen-microcode.c
@@ -15,8 +15,8 @@
 void show_help(void)
 {
     fprintf(stderr,
-            "xenmicrocode: Xen microcode updating tool\n"
-            "Usage: xenmicrocode <microcode blob>\n");
+            "xen-microcode: Xen microcode updating tool\n"
+            "Usage: xen-microcode <microcode blob>\n");
 }
 
 int main(int argc, char *argv[])
