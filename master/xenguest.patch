+    };
+};
+
+const static struct arg_list setable_args[] = {
+    {"store_port",   int_type,  .a_int = &arg_store_port},
+    {"console_port", int_type,  .a_int = &arg_console_port},
+    {"pv",           bool_type, .a_int = &pv_mode},
