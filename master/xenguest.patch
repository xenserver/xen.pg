+static int parse_mode(const char *mode)
+{
+    int i;
+
+    for (i = 0; i < XG_MODE__END__; i++) {
+        if (strcmp(mode, xg_mode_names[i]) == 0)
+            return i;
+    }
+    xg_err("xenguest: unrecognized mode '%s'\n", mode);
+    exit(1);
+}
