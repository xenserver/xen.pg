+	set -e ;\
+	cd $(MY_OBJ_DIR)/zlib-* ;\
+	export PATH=$(MY_OBJ_DIR)/bin:$$PATH ;\
+	CC=musl-gcc ./configure --prefix=$(MY_OBJ_DIR) ;\
+	make -j4 ;\
