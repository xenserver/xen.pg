+    size = xc_get_cpumap_size(xch) * 8; /* array is of uint8_t */
+
+    for (i=0; i<f->vcpus; i++){
+        if (f->vcpu_affinity[i]){ /* NULL means unset */
+            pcpus_supplied = strlen(f->vcpu_affinity[i]);
