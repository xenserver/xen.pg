+            r = xc_vcpu_setaffinity(xch, domid, i, cpumap, NULL,
+                                    XEN_VCPUAFFINITY_HARD);
+            free(cpumap);
+            if (r) {
+                failwith_oss_xc("xc_vcpu_setaffinity");
+            }
