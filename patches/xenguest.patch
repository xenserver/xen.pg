+            break;
+
+        case XG_OPT_FAKE:
+        case XG_OPT_FORK:
+        case XG_OPT_NO_INC_GENID:
+            /* ignored */
+            break;
+
+        default:
+            xg_err("xenguest: invalid command line '%s'\n", argv[optind - 1]);
+            exit(1);
+        }
+    }
+}
