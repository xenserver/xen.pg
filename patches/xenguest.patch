+                  int errnoval,
+                  const char *context,
+                  const char *format,
+                  va_list al)
+{
+    char *buf = NULL;
+
+    if ( level == XTL_DEBUG && !(opt_flags & XCFLAGS_DEBUG) )
+        return;
+
+    if ( vasprintf(&buf, format, al) != -1 )
+        xg_info("%s: %s: %s\n", context, xtl_level_to_string(level), buf);
+
+    free(buf);
